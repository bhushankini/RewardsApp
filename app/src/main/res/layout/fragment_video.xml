<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E7E9">



    <RelativeLayout
        android:id="@+id/rl_dailyreward"
        android:background="@drawable/relative_layout_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:padding="5dp"

        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/btnDailyReward"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_daily_reward"/>

            <TextView
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/claim_daily_reward"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnDailyReward"
            android:theme="@style/WatchButton"
            android:text="@string/claim"
            android:drawableLeft="@mipmap/ic_videoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_applovin"
        android:background="@drawable/relative_layout_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/rl_dailyreward"
        android:padding="5dp"

        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@+id/btnAppLovin">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@mipmap/applovin_logo"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/watch_earn"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnAppLovin"
            android:theme="@style/WatchButton"
            android:text="@string/watch"
            android:drawableLeft="@mipmap/ic_videoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_admob"
        android:background="@drawable/relative_layout_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/rl_applovin"
        android:padding="5dp"
        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/btnAdmob"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@mipmap/admob_logo"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/watch_earn"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnAdmob"
            android:theme="@style/WatchButton"
            android:text="@string/watch"
            android:drawableLeft="@mipmap/ic_videoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_vungle"
        android:background="@drawable/relative_layout_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/rl_admob"
        android:padding="5dp"
        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/btnVungle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@mipmap/vungle_logo"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/watch_earn"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnVungle"
            android:theme="@style/WatchButton"
            android:text="@string/watch"
            android:drawableLeft="@mipmap/ic_videoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
</ScrollView>